IntLiteral: i32 = {
    r"-?[0-9]+" => <>.parse().unwrap(),
};

BoolLiteral: bool = {
    KwTrue => true,
    KwFalse => false,
}

CharLiteral: String = {
    <literal:r#"'([^'\\\n\r\t]|\\.)*'"#> => String::from(&literal[1..literal.len()-1]),
};

StringLiteral: String = {
    <literal:r#""([^"\\\n\r\t]|\\.)*""#> => String::from(&literal[1..literal.len()-1]),
};

// Keywords:
KwVar: () = { "var" }
KwRead: () = { "read" }
KwWrite: () = { "write" }
KwIf: () = { "if" }
KwElse: () = { "else" }
KwWhile: () = { "while" }
KwFun: () = { "fun" }
KwTrue: () = { "true" }
KwFalse: () = { "false" }
KwStruct: () = { "struct" }
KwSelf: () = { "self" }
KwNew: () = { "new" }

// Macros:
CommaSeparatedNotEmpty<T>: Vec<T> = {
    <v:(<T> ",")*> <e:T> => {
        let mut v = v;
        v.push(e);
        v
    }
};

CommaSeparated<T>: Vec<T> = {
    <v:(<T> ",")*> <e:T?> => match e {
        None => v,
        Some(e) => {
            let mut v = v;
            v.push(e);
            v
        }
    }
}

LeftAssocBinaryOpExprTier<Ops, PrevTier>: Expression = {
    <start: @L> <lhs:LeftAssocBinaryOpExprTier<Ops, PrevTier>> <operator:Ops> <rhs:PrevTier> <end: @R> => {
        Expression::BinaryOp(BinaryOperatorExpr {
            operator,
            lhs: Box::new(lhs),
            rhs: Box::new(rhs),
            span: InputSpan { file, start, end },
        })
    },
    PrevTier,
}

// Lexer:

match {
    // Ignore line comments.
    r"//[^\n\r]*[\n\r]*" => { },
} else {
    // Ignore whitespace.
    r"\s*" => { },
    _ // Everything else
}
