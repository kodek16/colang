ArrayTypeExpr: TypeExpr = {
    <start:@L> "[" <element:TypeExpr> "]" <end:@R> => {
        TypeExpr::Array(ArrayTypeExpr {
            element: Box::new(element),
            span: InputSpan { file, start, end },
        })
    },
};

